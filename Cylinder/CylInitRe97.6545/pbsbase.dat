#!/bin/bash
# parallel job using 48 processors. and runs for 4 hours (max)
#PBS -l nodes=1:ppn=1
# sends mail if process aborts, when it begins, and 
# when it ends (abe). Make sure you define your email 
# address.
#PBS -m abe
#PBS -M yourNetID@princeton.edu

workdir=$PBS_O_WORKDIR
cd $workdir

./build/ibpm -outdir $OUTDIR -tecplot 10000 -tecplotallgrids 0 -restart 2000 -nx 800 -ny 200 -length 16 -xoffset -1.5 -yoffset -2 -xshift 0.8 -reftime 10000 -geom Geometries/cylinder2Pa.geom -ubf 1 -Re $RE -dt 0.02 -nsteps 15000 -scheme rk3 -nftle 0
